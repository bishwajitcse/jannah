<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
  
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2" >

        <ImageView
            android:id="@+id/bookSnap"
            android:layout_width="210dip"
            android:layout_height="170dip"
            android:layout_marginTop="0dp" />
        
        <TextView
            android:id="@+id/txt_suitesDetials"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_above="@+id/imageView1"
            android:layout_alignLeft="@+id/suiteshead"
            android:layout_below="@+id/suiteshead"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/btn_bookDiscover"
            android:layout_width="110dp"
            android:layout_height="30dip"
            android:layout_alignBottom="@+id/bookSnap"
            android:layout_alignLeft="@+id/txt_suitesDetials"
            android:layout_marginLeft="10dip"
            android:background="@drawable/btn_discover" />

        <TextView
            android:id="@+id/suiteshead"
            android:layout_width="match_parent"
            android:layout_height="35dip"
         	android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/bookSnap"
            android:text="TextView"
            android:textColor="#caa846"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_bookDiscover"
            android:layout_alignLeft="@+id/btn_bookDiscover"
           
            android:layout_marginBottom="25dp"
            android:src="@drawable/star1" />

        <ImageButton
            android:id="@+id/btn_bookCheck"
            android:layout_width="110dip"
            android:layout_height="30dip"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/imageView1"
            android:background="@drawable/book_now" />

    </RelativeLayout>

</RelativeLayout>