<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#f2f2f2" >

        <ImageView
            android:id="@+id/roomSnap"
            android:layout_width="150dip"
            android:layout_height="120dip"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/txt_OfferDetails"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tab2head"
            android:layout_below="@+id/tab2head"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tab2head"
            android:layout_width="250dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/roomSnap"
            android:text="TextView"
            android:textColor="#caa846"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="60dip"
            android:layout_height="23dip"
            android:layout_alignLeft="@+id/txt_OfferDetails"
  			android:layout_below="@+id/txt_OfferDetails"
            android:background="@drawable/btn_discover" />

    </RelativeLayout>

</RelativeLayout>